{
  "name": "wp-mu-login",
  "version": "1.0.0",
  "description": "A custom WordPress login for Mercer University",
  "main": "index.js",
  "repository": "https://github.com/InteractiveDesignAndDevelopment/wp-mu-login.git",
  "scripts": {
    "test": "php -S localhost:8000 -t test/",
    "prebuild": "run-s clean",
    "build": "run-s build:*",
    "build:css": "run-s build:css:*",
    "build:css:node-sass": "node-sass src/scss/index.scss build/wp-mu-login.css",
    "build:css:postcss": "postcss build/wp-mu-login.css -u autoprefixer -o build/wp-mu-login.css",
    "build:css:cssnano": "cssnano build/wp-mu-login.css build/wp-mu-login.css",
    "build:php": "cpy src/php/wp-mu-login.php build/",
    "postbuild": "run-s postbuild:*",
    "postbuild:copy-files": "run-p postbuild:copy-files:*",
    "postbuild:copy-files:dist-php": "cpy build/wp-mu-login.php dist/",
    "postbuild:copy-files:dist-css": "cpy build/wp-mu-login.css dist/",
    "postbuild:remove-build-directory": "rimraf build",
    "clean": "run-p clean:*",
    "clean:dist": "rimraf dist && mkdirp dist",
    "clean:test": "rimraf test/wp-mu-login.php"
  },
  "author": "Todd Sayre",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^8.1.0",
    "cpy-cli": "^1.0.1",
    "cssnano-cli": "^1.0.5",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.8.3",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^5.0.0",
    "rimraf": "^2.6.2",
    "sass-bem": "^2.6.5"
  }
}
