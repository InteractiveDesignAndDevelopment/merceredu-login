{
  "name": "wp-mu-login",
  "version": "1.0.0",
  "description": "A custom WordPress login for Mercer University",
  "main": "index.js",
  "repository": "https://github.com/InteractiveDesignAndDevelopment/wp-mu-login.git",
  "scripts": {
    "prebuild": "run-p clean",
    "build": "run-p build:*",
    "build:css": "run-s build:css:*",
    "build:css:node-sass": "node-sass src/scss/index.scss build/aad-sso-wordpress-mercer.css",
    "build:css:postcss": "postcss build/aad-sso-wordpress-mercer.css -u autoprefixer -o build/aad-sso-wordpress-mercer.css",
    "build:css:cssnano": "cssnano build/aad-sso-wordpress-mercer.css build/aad-sso-wordpress-mercer.css",
    "build:js": "browserify src/js/index.js -o build/aad-sso-wordpress-mercer.js -t [ babelify --presets [ env minify ] ]",
    "build:php": "cpy src/php/aad-sso-wordpress-mercer.php build/",
    "postbuild": "run-s postbuild:*",
    "postbuild:copy-files": "run-p postbuild:copy-files:*",
    "postbuild:copy-files:php": "cpy build/aad-sso-wordpress-mercer.php dist/",
    "postbuild:copy-files:css": "cpy build/aad-sso-wordpress-mercer.css dist/",
    "postbuild:copy-files:js": "cpy build/aad-sso-wordpress-mercer.js dist/",
    "postbuild:remove-build-directory": "rimraf build",
    "clean": "rimraf dist && mkdirp dist"
  },
  "author": "Todd Sayre",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^8.1.0",
    "babel": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-minify": "^0.4.0",
    "babelify": "^8.0.0",
    "breakpoint-sass": "^2.7.1",
    "browserify": "^16.2.0",
    "cpy-cli": "^1.0.1",
    "cssnano-cli": "^1.0.5",
    "dom-loaded": "^1.0.1",
    "mkdirp": "^0.5.1",
    "modularscale-sass": "^3.0.5",
    "node-sass": "^4.8.3",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^5.0.0",
    "prepend-child": "^1.0.1",
    "rimraf": "^2.6.2",
    "sass-bem": "^2.6.5",
    "sass-material-colors": "0.0.5"
  }
}
